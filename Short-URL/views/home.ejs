<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
    </style>
    <title>Home Page</title>
</head>
<body>
   <h1>URL Shortener</h1>
   
   <% if (locals.id) { %>
    <p>URL Generated: </p>
    <a href="http://localhost:8000/url/<%= id %>">http://localhost:8000/url/<%= id %></a>
  <% } %>
  
   <div>
    <form action="/url" method="post">
        <label for="">Enter Your Original URL</label>
        <input name="url" type="text" placeholder="https://example.com" />
        <button type="submit">Generate</button>
    </form>
   </div>
   <div>
    <% if (locals.urls) { %> 
        <table>
            <thead>
                <tr>
                    <th>Sr.No</th>
                    <th>ShortID</th>
                    <th>Redirect URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% urls.forEach((url, index) => { %>
                    <tr>
                        <td> <%= index + 1 %> </td>
                        <td> <%= url.shortId %> </td>
                        <td> <%= url.redirectURL %> </td>
                        <td> <%= url.visitHistory.length %> </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>
   </div>
</body>
</html>
